<UserControl x:Class="WpfAppGraphic.Views.DisplayMainOptions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppGraphic.Views"
             
             xmlns:views="clr-namespace:WpfAppGraphic.ViewModels"
            
             d:DataContext="{d:DesignInstance Type=views:DisplayMainOptionsModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label Content="List of Product"/>
            <Button Content="Add Product " Command="{Binding NavigateToAddCommand}"/>

        </StackPanel>
    </Grid>
</UserControl>
